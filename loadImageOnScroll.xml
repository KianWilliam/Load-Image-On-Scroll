	<description><![CDATA[ This plugin is developed by <a href="https://kwproductions121.com">KWProductions Co.</a> In case of any problem contact us: webarchitect@kwproductions121.com <br />In case you are using cache extensions in your site or joomla cache itself, clear them first. ]]></description>
    <scriptfile>install.script.php</scriptfile>
	<files>
		<filename plugin="loadImageOnScroll">loadImageOnScroll.php</filename>		
		<filename>index.html</filename>
		
	</files>
     <languages folder="language">        
        <language tag="en-GB">en-GB/en-GB.plg_system_loadimageonscroll.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_loadimageonscroll.sys.ini</language>
    </languages>	
	<updateservers>
		<server type="collection" name="loadImageOnScroll"><![CDATA[https://www.extensions.kwproductions121.com/myextensions.xml]]></server>
     </updateservers>
	<config>
		<fields name="params">
			<fieldset name="basic">
                <field name="loadtype" type="radio" default="lazy" label="PLG_SYSTEM_LOADIMAGEONSCROLL_LOADTYPE_LABEL" description="PLG_SYSTEM_LOADIMAGEONSCROLL_LOADTYPE_DESC">
					<option value="auto">Auto</option>
					<option value="lazy">Lazy</option>
                    <option value="eager">Eager</option>
                </field>
				<field name="exclude" type="text"  label="PLG_SYSTEM_LOADIMAGEONSCROLL_EXCLUDE_LABEL" description="PLG_SYSTEM_LOADIMAGEONSCROLL_EXCLUDE_DESC" />
				<field name="allowed_pages" type="text" default="" label="PLG_SYSTEM_LOADIMAGEONSCROLL_ALLOWED_PAGES_LABEL" description="PLG_SYSTEM_LOADIMAGEONSCROLL_ALLOWED_PAGES_DESC" />
				
			</fieldset>
		</fields>
	</config>
</extension>
